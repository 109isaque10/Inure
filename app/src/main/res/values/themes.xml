<resources>
    <!-- Base application theme. -->
    <style name="Inure" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAppAccent">@color/inure</item>
        <item name="colorAppAccentLight">@color/inure_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/statusBarColor</item>
        <item name="android:colorEdgeEffect">?attr/colorAppAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->

        <!-- Debug -->
        <item name="android:keepScreenOn">true</item>
    </style>

    <style name="Blue" parent="Inure">
        <item name="colorAppAccent">@color/blue</item>
        <item name="colorAppAccentLight">@color/blue_light</item>
    </style>

    <style name="BlueGrey" parent="Inure">
        <item name="colorAppAccent">@color/blueGrey</item>
        <item name="colorAppAccentLight">@color/blueGrey_light</item>
    </style>

    <style name="Red" parent="Inure">
        <item name="colorAppAccent">@color/red</item>
        <item name="colorAppAccentLight">@color/red_light</item>
    </style>

    <style name="Green" parent="Inure">
        <item name="colorAppAccent">@color/green</item>
        <item name="colorAppAccentLight">@color/green_light</item>
    </style>

    <style name="Orange" parent="Inure">
        <item name="colorAppAccent">@color/orange</item>
        <item name="colorAppAccentLight">@color/orange_light</item>
    </style>

    <style name="Purple" parent="Inure">
        <item name="colorAppAccent">@color/purple</item>
        <item name="colorAppAccentLight">@color/purple_light</item>
    </style>

</resources>