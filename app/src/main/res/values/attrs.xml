<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DynamicCornerLayout">
        <!-- At least one of them needs to be true else roundness will be applies to all corners
                default is false for both of them -->
        <attr name="roundTopCorners" format="boolean" />
        <attr name="roundBottomCorners" format="boolean" />
        <attr name="roundAllCorners" format="boolean" />
    </declare-styleable>

    <!-- Fast Scroll -->
    <attr name="indicatorFastScrollerStyle" format="reference" />
    <attr name="indicatorFastScrollerThumbStyle" format="reference" />

    <attr name="fastScrollerIconSize" format="dimension" />
    <attr name="fastScrollerIconColor" format="color" />
    <attr name="fastScrollerTextPadding" format="dimension" />
    <attr name="fastScrollerThumbColor" format="color" />

    <declare-styleable name="FastScrollerView">
        <attr name="fastScrollerIconSize" />
        <attr name="fastScrollerIconColor" />
        <attr name="android:textAppearance" />
        <attr name="android:textColor" />
        <attr name="fastScrollerTextPadding" />
    </declare-styleable>

    <declare-styleable name="FastScrollerThumbView">
        <attr name="fastScrollerThumbColor" />
        <attr name="fastScrollerIconSize" />
        <attr name="fastScrollerIconColor" />
        <attr name="android:textAppearance" />
        <attr name="android:textColor" />
    </declare-styleable>

    <!-- Icon View -->
    <declare-styleable name="AppTheme">
        <attr name="iconViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="IconView">
        <attr name="icon" format="reference" />
        <attr name="constantShadowTranslationY" format="dimension" />
        <attr name="variableShadowTranslationY" format="dimension" />
        <attr name="scaleDown" format="float" />
        <attr name="bigBlurRadius" format="float" />
        <attr name="smallBlurRadius" format="float" />
    </declare-styleable>
</resources>