<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/header_padding"
    android:layout_marginVertical="5dp"
    android:orientation="vertical"
    android:padding="@dimen/header_padding">

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/information_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="bold" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/information_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

</LinearLayout>