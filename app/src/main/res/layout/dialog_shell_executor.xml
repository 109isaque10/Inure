<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_height"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/dialog_padding">

    <app.simple.inure.decorations.corners.DynamicCornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/mainBackground"
        android:elevation="@dimen/dialog_elevation"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding">

        <app.simple.inure.decorations.views.TypeFaceTextView
            android:id="@+id/shell_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorAppAccent"
            android:textSize="@dimen/info_text_large"
            app:appFontStyle="bold" />

        <app.simple.inure.decorations.views.TypeFaceTextView
            android:id="@+id/shell_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/textTertiary"
            android:textSize="@dimen/info_text_small"
            app:appFontStyle="regular" />

    </app.simple.inure.decorations.corners.DynamicCornerLinearLayout>

</FrameLayout>