<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="10dp"
    android:orientation="vertical"
    android:padding="15dp">

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Directories"
        android:textColor="@color/textHeading"
        android:textSize="12pt"
        app:appFontStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APK (Base Package)"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/sub_directory_base_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_text_large_margin_top"
        android:layout_marginBottom="@dimen/info_text_large_margin_bottom"
        android:textColor="@color/textHeading"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/sub_directory_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_text_large_margin_top"
        android:layout_marginBottom="@dimen/info_text_large_margin_bottom"
        android:textColor="@color/textHeading"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="regular" />

</LinearLayout>