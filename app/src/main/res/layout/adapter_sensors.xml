<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.ripple.DynamicRippleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/adapter_sensor_container"
    android:padding="@dimen/header_padding"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="@dimen/header_padding">

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_sensor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:textColorStyle="primary"
        android:textSize="@dimen/resource_name_text_size"
        app:appFontStyle="bold" />

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_sensor_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColorStyle="accent"
        android:textSize="14sp"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_sensor_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColorStyle="tertiary"
        android:textSize="14sp"
        android:layout_marginVertical="5dp"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_sensor_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColorStyle="tertiary"
        android:textSize="14sp"
        app:appFontStyle="regular" />

</app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>