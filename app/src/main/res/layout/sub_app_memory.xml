<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.corners.DynamicCornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/dialogBackground"
    android:elevation="@dimen/dialog_elevation"
    android:orientation="vertical"
    android:padding="30dp">

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/storage"
        android:textColor="@color/textPrimary"
        android:textSize="12pt"
        app:appFontStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apk_base_package"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/sub_memory_base_package_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_text_large_margin_top"
        android:layout_marginBottom="@dimen/info_text_large_margin_bottom"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/split_packages"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/sub_memory_split_packages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_text_large_margin_top"
        android:layout_marginBottom="@dimen/info_text_large_margin_bottom"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cache"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/sub_memory_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_text_large_margin_top"
        android:layout_marginBottom="@dimen/info_text_large_margin_bottom"
        android:textColor="@color/textHeading"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/sub_memory_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_text_large_margin_top"
        android:layout_marginBottom="@dimen/info_text_large_margin_bottom"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/directories"
        android:textColor="@color/textHeading"
        android:textSize="12pt"
        app:appFontStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apk_base_package"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/sub_directory_base_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_text_large_margin_top"
        android:layout_marginBottom="@dimen/info_text_large_margin_bottom"
        android:textColor="@color/textHeading"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/sub_directory_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_text_large_margin_top"
        android:textColor="@color/textHeading"
        android:textSize="@dimen/info_text_large"
        app:appFontStyle="regular" />
</app.simple.inure.decorations.corners.DynamicCornerLinearLayout>