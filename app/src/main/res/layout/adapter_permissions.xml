<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.ripple.DynamicRippleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/adapter_services_container"
    android:padding="20dp">

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/adapter_permissions_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        app:appFontStyle="bold" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/adapter_permissions_status"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorAppAccent"
        android:textSize="14sp"
        app:appFontStyle="regular" />

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/adapter_permissions_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textTertiary"
        android:textSize="14sp"
        app:appFontStyle="regular" />

</app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>