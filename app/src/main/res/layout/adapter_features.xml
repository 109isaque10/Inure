<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.ripple.DynamicRippleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_features_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/header_padding"
    android:layout_marginVertical="5dp"
    android:orientation="vertical"
    android:padding="@dimen/header_padding">

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_features_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        app:appFontStyle="bold" />

    <app.simple.inure.decorations.typeface.TypeFaceTextView
        android:id="@+id/adapter_features_required"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="?attr/colorAppAccent"
        android:textSize="14sp"
        app:appFontStyle="regular" />

</app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>