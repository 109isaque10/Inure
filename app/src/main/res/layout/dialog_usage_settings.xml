<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.corners.DynamicCornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/dialogBackground"
    android:elevation="@dimen/dialog_elevation"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <LinearLayout
        android:id="@+id/dialog_apps_category_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <app.simple.inure.decorations.views.TypeFaceTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/dialog_padding"
            android:text="@string/apps_category"
            android:textColor="@color/textPrimary"
            android:textSize="6pt"
            app:appFontStyle="bold" />

        <app.simple.inure.decorations.ripple.DynamicRippleTextView
            android:id="@+id/dialog_apps_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableEnd="@drawable/ani_ic_unfold_popup"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dialog_padding"
            android:textColor="@color/textTertiary"
            android:textSize="5pt"
            app:appFontStyle="regular"
            app:drawableTint="?attr/colorAppAccent"
            app:drawableTintMode="src_in" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <app.simple.inure.decorations.views.TypeFaceTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/dialog_padding"
            android:text="@string/sorting_style"
            android:textColor="@color/textPrimary"
            android:textSize="6pt"
            app:appFontStyle="bold" />

        <app.simple.inure.decorations.ripple.DynamicRippleTextView
            android:id="@+id/dialog_apps_sorting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableEnd="@drawable/ani_ic_unfold_popup"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dialog_padding"
            android:textColor="@color/textTertiary"
            android:textSize="5pt"
            app:appFontStyle="regular"
            app:drawableTint="?attr/colorAppAccent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_interval_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <app.simple.inure.decorations.views.TypeFaceTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/dialog_padding"
            android:text="@string/data_interval"
            android:textColor="@color/textPrimary"
            android:textSize="6pt"
            app:appFontStyle="bold" />

        <app.simple.inure.decorations.ripple.DynamicRippleTextView
            android:id="@+id/popup_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableEnd="@drawable/ani_ic_unfold_popup"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dialog_padding"
            android:textColor="@color/textTertiary"
            android:textSize="5pt"
            app:appFontStyle="regular"
            app:drawableTint="?attr/colorAppAccent"
            app:drawableTintMode="src_in" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dialog_padding"
        android:layout_marginVertical="@dimen/dialog_padding"
        android:background="@color/divider" />

    <app.simple.inure.decorations.ripple.DynamicRippleTextView
        android:id="@+id/dialog_open_apps_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:padding="@dimen/dialog_padding"
        android:text="@string/open_application_settings"
        android:textColor="@color/textPrimary"
        android:textSize="6pt"
        app:appFontStyle="bold" />

</app.simple.inure.decorations.corners.DynamicCornerLinearLayout>
