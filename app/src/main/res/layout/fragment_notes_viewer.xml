<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.padding.PaddingAwareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/panel_item_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/sub_app_header" />

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:id="@+id/saveing_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/saving"
            app:appFontStyle="medium"
            android:saveEnabled="true"
            app:textColorStyle="tertiary" />

        <app.simple.inure.decorations.typeface.TypeFaceEditTextDynamicCorner
            android:id="@+id/app_notes_edit_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:hint="@string/notes"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:paddingHorizontal="@dimen/dialog_padding"
            android:saveEnabled="true"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="@dimen/popup_text_size"
            app:appFontStyle="regular"
            app:textColorStyle="primary" />

    </LinearLayout>

</app.simple.inure.decorations.padding.PaddingAwareFrameLayout>