<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <app.simple.inure.decorations.views.TypeFaceTextView
            android:id="@+id/typeFaceTextView02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:text="@string/inure_setup"
            android:textSize="30sp"
            android:transitionName="@string/inure_setup"
            android:textColor="@color/textPrimary"
            app:appFontStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/header_icon_size"
            android:layout_height="@dimen/header_icon_size"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/ic_app_icon"
            android:transitionName="main_app_icon"
            app:tint="@color/iconSecondary" />

    </LinearLayout>

    <app.simple.inure.decorations.views.TypeFaceTextView
        android:id="@+id/adapter_total_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_padding"
        android:paddingHorizontal="@dimen/dialog_padding"
        android:text="@string/desc_setup"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/info_text_small"
        app:appFontStyle="light" />

</LinearLayout>