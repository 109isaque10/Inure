<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/color_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/transparent">

    <app.simple.inure.decorations.corners.DynamicCornerAccentColor xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/adapter_palette_color"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/adapter_palette_tick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_check"
            app:tint="@android:color/white"
            tools:ignore="ContentDescription" />

    </app.simple.inure.decorations.corners.DynamicCornerAccentColor>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <app.simple.inure.decorations.views.TypeFaceTextView
            android:id="@+id/color_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            app:appFontStyle="bold"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/popup_text_size" />

        <app.simple.inure.decorations.views.TypeFaceTextView
            android:id="@+id/color_hex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            app:appFontStyle="regular"
            android:textColor="@color/textTertiary"
            android:textSize="@dimen/info_text_small" />
    </LinearLayout>
</LinearLayout>
