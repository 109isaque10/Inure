<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/dialog_padding">

    <app.simple.inure.decorations.corners.DynamicCornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/popup_item_gap_length"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="@dimen/dialog_elevation"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding">

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/popup_item_gap_length"
            android:paddingHorizontal="@dimen/popup_padding"
            android:text="@string/mandatory"
            app:appFontStyle="medium"
            app:textColorStyle="accent" />

        <app.simple.inure.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="@dimen/popup_padding">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/name"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="bold"
                app:textColorStyle="primary" />

            <app.simple.inure.decorations.checkbox.InureCheckBox
                android:id="@+id/name_checkbox"
                android:layout_width="@dimen/checkbox_dimensions"
                android:layout_height="@dimen/checkbox_dimensions" />

        </app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.inure.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/package_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/popup_item_gap_length"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="@dimen/popup_padding">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/package_name"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="bold"
                app:textColorStyle="primary" />

            <app.simple.inure.decorations.checkbox.InureCheckBox
                android:id="@+id/package_name_checkbox"
                android:layout_width="@dimen/checkbox_dimensions"
                android:layout_height="@dimen/checkbox_dimensions" />

        </app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/popup_item_gap_length"
            android:paddingHorizontal="@dimen/popup_padding"
            android:text="@string/optional"
            app:appFontStyle="medium"
            app:textColorStyle="accent" />

        <app.simple.inure.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="@dimen/popup_padding">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/version"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="bold"
                app:textColorStyle="primary" />

            <app.simple.inure.decorations.checkbox.InureCheckBox
                android:id="@+id/version_checkbox"
                android:layout_width="@dimen/checkbox_dimensions"
                android:layout_height="@dimen/checkbox_dimensions" />

        </app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.inure.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/install_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/popup_item_gap_length"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="@dimen/popup_padding">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/install_date"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="bold"
                app:textColorStyle="primary" />

            <app.simple.inure.decorations.checkbox.InureCheckBox
                android:id="@+id/install_date_checkbox"
                android:layout_width="@dimen/checkbox_dimensions"
                android:layout_height="@dimen/checkbox_dimensions" />

        </app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.inure.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/update_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/popup_item_gap_length"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="@dimen/popup_padding">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/update_date"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="bold"
                app:textColorStyle="primary" />

            <app.simple.inure.decorations.checkbox.InureCheckBox
                android:id="@+id/update_date_checkbox"
                android:layout_width="@dimen/checkbox_dimensions"
                android:layout_height="@dimen/checkbox_dimensions" />

        </app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/popup_item_gap_length"
            android:paddingHorizontal="@dimen/popup_padding"
            android:text="@string/link"
            app:appFontStyle="medium"
            app:textColorStyle="accent" />

        <app.simple.inure.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/play_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="@dimen/popup_padding">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/popup_padding"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:text="@string/play_store"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="bold"
                app:drawableEndCompat="@drawable/ic_link_tiny"
                app:drawableTintStyle="accent"
                app:textColorStyle="primary" />

            <app.simple.inure.decorations.checkbox.InureCheckBox
                android:id="@+id/play_store_checkbox"
                android:layout_width="@dimen/checkbox_dimensions"
                android:layout_height="@dimen/checkbox_dimensions" />

        </app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.inure.decorations.ripple.DynamicRippleLinearLayout
            android:id="@+id/fdroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/popup_item_gap_length"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="@dimen/popup_padding">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/popup_padding"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:text="@string/fdroid"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="bold"
                app:drawableEndCompat="@drawable/ic_link_tiny"
                app:drawableTintStyle="accent"
                app:textColorStyle="primary" />

            <app.simple.inure.decorations.checkbox.InureCheckBox
                android:id="@+id/fdroid_checkbox"
                android:layout_width="@dimen/checkbox_dimensions"
                android:layout_height="@dimen/checkbox_dimensions" />

        </app.simple.inure.decorations.ripple.DynamicRippleLinearLayout>

        <app.simple.inure.decorations.theme.ThemeDivider
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <app.simple.inure.decorations.ripple.DynamicRippleTextView
                android:id="@+id/format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/popup_padding"
                android:padding="@dimen/button_padding"
                android:text=".MD"
                android:textSize="@dimen/info_text_small"
                app:appFontStyle="medium"
                app:drawableEndCompat="@drawable/ani_ic_unfold_popup"
                app:drawableTintStyle="accent"
                app:textColorStyle="tertiary"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <app.simple.inure.decorations.ripple.DynamicRippleTextView
                android:id="@+id/generate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:padding="@dimen/button_padding"
                android:text="@string/generate_apps_list"
                android:textSize="@dimen/info_text_small"
                app:appFontStyle="bold"
                app:drawableEndCompat="@drawable/ic_arrow_right_tiny"
                app:drawableTintStyle="accent"
                app:textColorStyle="accent"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </app.simple.inure.decorations.corners.DynamicCornerLinearLayout>

</FrameLayout>